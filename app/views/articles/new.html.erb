<h1> Crear Articulo Nuevo</h1>

 <% if @article.errors.any? %>
    <h2>Los siguientes errores impidieron que se guardara el articulo.</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
        <% end %>
    </ul>
 <% end %>

<%= form_with scope: :article, url: articles_path, data: { turbo: false }, local: true do |f| %>

<p>
    <%= f.label :title %> <br/>
    <%= f.text_field :title %>
</p>

<p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
</p>

<p>
    <%= f.submit %>
</p>

<% end %>

<p><%= link_to 'Volver al listado de articulos.', articles_path %></p>